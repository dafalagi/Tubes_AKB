<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">
    <TextView
        android:id="@+id/HeaderFragment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar Destinasi Wisata"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/mochiypopone"
        android:paddingTop="24dp"
        android:layout_margin="24dp"
        android:gravity="center"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ListMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/HeaderFragment1"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/card_destinasi" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingbtnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#4048FF"
        android:elevation="24dp"
        android:outlineSpotShadowColor="@color/black"
        android:src="@drawable/add_icon"
        app:backgroundTint="@color/white"
        app:borderWidth="0dp"
        app:elevation="24dp"
        app:fabSize="normal" />
</RelativeLayout>